<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="match_parent"
  	android:layout_height="match_parent"
  	android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/set_destination_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="Where are you going?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="2dip" />"
        
        <TextView 
            android:id="@+id/street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="Street: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/set_destination_text"
            android:paddingTop="15dip"
            android:gravity="left"
            android:layout_margin="2dip" />
                
        <EditText
            android:layout_toRightOf="@+id/street"
            android:layout_alignTop="@+id/street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="2dip" />
        
        <TextView 
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="City: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/street"
            android:paddingTop="15dip"
            android:layout_margin="2dip" />
        
        <EditText
            android:layout_toRightOf="@+id/city"
            android:layout_alignTop="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="2dip" />
        
        <TextView 
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="State: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/city"
            android:paddingTop="15dip"
            android:layout_margin="2dip" />
        
        <EditText
            android:layout_toRightOf="@+id/state"
            android:layout_alignTop="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="2dip" />
        
        <TextView 
            android:id="@+id/zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="Zip Code: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/state"
            android:paddingTop="15dip"
            android:layout_margin="2dip" />
        
        <EditText
            android:layout_toRightOf="@+id/zip"
            android:layout_alignTop="@+id/zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="2dip" />
        
        <Button 
            android:id="@+id/create_route"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Create Route"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/zip"
            android:layout_toLeftOf="@+id/Center"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dip"
            android:onClick="addLocation" />
        
        <EditText
            android:id="@+id/Center"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ready_time_text"
            android:layout_centerHorizontal="true" />
        
        <Button 
            android:id="@+id/delete_route"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Delete Route"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/zip"
            android:layout_toRightOf="@+id/Center"
            android:layout_alignParentRight="true"
            android:onClick="addLocation"
            android:layout_margin="2dip" />
        
        
        
    </RelativeLayout>
</ScrollView>
